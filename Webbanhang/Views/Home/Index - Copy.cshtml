@model IEnumerable<Webbanhang.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutHome.cshtml";
}

<div id="home-slider">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 header-top-right">
                <div class="homeslider">
                    <ul id="contenhomeslider">
                        <li><img alt="Funky roots" src="~/Assets/images/slide/img1.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/Assets/images/slide/img2.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/Assets/images/slide/img3.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/Assets/images/slide/img4.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/Assets/images/slide/img5.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/Assets/images/slide/img6.jpg" title="Funky roots" /></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-page">
    <div class="container">
        <!-- featured category  -->
        <div class="category-featured Vegetables">
            <nav class="navbar nav-menu show-brand">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-brand"><a href="#"> <img alt="fashion" src="~/Assets/images/icon_like.png" /> Sản phẩm</a></div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse">

                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->

            </nav>
            <div class="product-featured clearfix">
                <div class="row">

                    <div class="col-sm-12">
                        <div class="box-right">
                            <!--&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;-->
                            @foreach (var item in Model)
                            {
                                <ul class="product-list">
                                    <li class="col-sm-4 product-item">
                                        <div class="left-block">
                                            <a>
                                                <img class="img-responsive" alt="product"
                                                     src="~/Assets/images/product-detail/@item.Anh" />
                                            </a>

                                            <div class="quick-view">
                                                <a title="Add to my wishlist" class="heart" href="#"></a>
                                                <a title="Add to compare" class="compare" href="#"></a>
                                                <a title="Quick view" href="~/Assets/images/product-detail/@item.Anh" class="search fancybox-button"></a>
                                            </div>
                                            <div class="add-to-cart">
                                                <a class="add-item-to-cart" title="Add to Cart" href="#" data-name=""
                                                   data-price="" data-image="vegetables/spinach_300x300.jpg" data-product-code="">Thêm vào giỏ hàng</a>
                                            </div>
                                            <div class="bestseller"></div>
                                        </div>
                                        <div class="right-block">
                                            <h5 class="product-name"><a href="/Home/SPDetail/@item.MaSP">@item.TenSP - 1kg </a></h5>

                                            <div class="content_price">
                                                <span class="price product-price"><span style="color: black">Giá bán: </span> @(string.Format("{0:#,##0}", item.DonGia))</span>
                                            </div>
                                        </div>
                                    </li> 
                                </ul>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end featured category -->

        <!-- featured category  -->
        
        <!-- end featured category -->
    </div>
</div>

